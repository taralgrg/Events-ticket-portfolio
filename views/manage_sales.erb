<div class="panel-heading" id="sell_box" style="border: 3px solid;">Manage your sales</div>
<br>


<% @offers.each() do |offer| %>
  <% if offer.user_id == @user.id %>

    <div class="panel panel-primary">
      <div class="panel-body">


        <div class="col-md-2">
          <%= offer.event.name %>
        </div>
          <div class="col-md-2">
            <%= offer.price %>
          </div>
          <div class="col-md-2">

            <img style="width: 150px;" src="<%= offer.event.imageurl %>">

          </div>
          <div class="col-md-2">
            <form action='/user_contact' method='post'>
              <input type='hidden' value="<%=offer.user_id%>" name='user_id' id='user_id'>
              <input type='hidden' value="<%=offer.id%>" name='offer_id' id='offer_id'>

            </form>
          </div>
          <div class="col-md-2">
            <button class="btn btn-info"><a href="/offer/<%=offer.id()%>">View</a></button>
          </div>
          <div class="col-md-2">
            <%= offer.event.date() %>

          </div>

      </div>
    </div>
  <% end %>

<% end %>
