<!-- Create Event -->
<div class="row">
  <div id="admin_event_left" class="col-md-6">
    <h2 id="title_block">Create Event</h3><hr><br>
    <form action='/event' method='post'>
      <input type='text' name='name' id='btn_admin' required="true" placeholder="name"><br>
      <input type='date' name='date' id='btn_date' required="true"><br>
      <input type="number" name="duration" id="btn_admin" required="true" placeholder="duration(hours)"><br>
      <input type='imageurl' name='imageurl' id='btn_admin' required="true" placeholder="event poster URL"><br>

      <select id="btn_admin" class="add_field_button" name="artist_name" type="int" required="true">
        <option id='placeholder_color btn_admin' value="">Select an Artist</option>
        <% @artists.each() do |artist| %>
          <option value="<%= artist.name%>">
            <%= artist.name() %>
          </option>
        <% end %>
        <option type="text" id='placeholder_color btn_admin' value="Add an Artist">Add an Artist</option>

      </select><br>

      <div class="input_fields_wrap"></div>

      <select id="btn_admin" class="add_field_category" name="category_name" type="int" required="true">
        <option id='placeholder_color btn_admin' value="">Select a Category</option>
        <% @categories.each() do |category| %>
          <option value="<%= category.name%>">
            <%= category.name() %>
          </option>
        <% end %>
        <option type="text" id='placeholder_color btn_admin' value="Add a Category">Add a Category</option>
      </select>

      <div class="input_fields_category_wrap"></div>


      <select id="btn_admin" class="add_field_venue" name="venue_name" type="int" required="true">
        <option id='placeholder_color btn_admin' value="">Select a Venue</option>
        <% @venues.each() do |venue| %>
          <option value="<%= venue.name%>">
            <%= venue.name() %>
          </option>

        <% end %>
      <option type="text" id='btn_admin' value="Add a Venue">Add a Venue</option>
      </select>


      <div class="input_fields_venue_wrap">
          <input type="hidden" name="yo" id="yo" value=1>
      </div>

      <button id="btn_login" type='submit'>Submit</button>
    </form>
  </div>

<!-- List All Events -->

  <div id="admin_event_right" class="col-md-6">
    <h2 id="title_block">All Events</h1><hr><br><br>
    <ul id="event_scroller">
      <% @events.each do |event|%>
        <div id="event_tile">
          <a href="/event/<%= event.id() %>">
            <div id="event_logo">
              <img id="image_logo" src="<%=event.imageurl%>" />
            </div>
            <div id="caption">
              <p><%=event.date%></p>
              <p><%=event.name%></p>
            </div>
          </a>
        </div>
      <%end%>
    </ul>
  </div>
</div>
