<h1><%= @venue.name %></h1>
<h1><%= @venue.address %></h1>
<img class="venue_logo" style="width: 150px;" src="<%=@venue.imageurl%>"/>

<form action="/venue/<%= @venue.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your venue:</label>
  <input id="name" name="name" type="text" placeholder="<%= @venue.name() %>">

  <label for="address">Change your address:</label>
  <input id="address" name="address" type="text" placeholder="<%= @venue.address() %>">

  <label for="imageurl">Change your image:</label>
  <input id="imageurl" name="imageurl" type="text" placeholder="<%= @venue.imageurl() %>">

  <button class="btn btn-default" type="submit">Update</button>
</form>

<form action="/venue/<%= @venue.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button class="btn btn-default" type="submit">Delete Venue</button>
</form>
